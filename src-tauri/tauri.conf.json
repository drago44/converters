{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Drago Forge",
  "version": "0.1.0",
  "identifier": "com.oleksandrkucherenko.drago-forge",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "Loading...",
        "width": 400,
        "height": 500,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "url": "splash.html"
      },
      {
        "label": "main",
        "title": "Drago Forge",
        "width": 1200,
        "height": 800,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
